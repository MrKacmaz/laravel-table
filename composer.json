{
  "name": "mrkacmaz/laravel-table",
  "description": "A powerful, eloquent-driven table package for Laravel with multi-framework frontend support",
  "keywords": [
    "laravel",
    "table",
    "datatable",
    "eloquent",
    "pagination",
    "sorting"
  ],
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Alpeen Kacmaz",
      "email": "alperen703.akm@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "LaravelTable\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "LaravelTable\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^8.5",
    "illuminate/support": "^10.0|^11.0",
    "illuminate/database": "^10.0|^11.0",
    "illuminate/pagination": "^10.0|^11.0"
  },
  "require-dev": {
    "phpstan/phpstan": "^2.1",
    "phpunit/phpunit": "^10.5",
    "orchestra/testbench": "^8.0|^9.0",
    "mockery/mockery": "^1.6",
    "friendsofphp/php-cs-fixer": "^3.94",
    "rector/rector": "^2.3.6",
    "driftingly/rector-laravel": "^2.1.9"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "test": "XDEBUG_MODE=off vendor/bin/phpunit --no-coverage",
    "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
    "analyse": "XDEBUG_MODE=off vendor/bin/phpstan analyse src --no-progress --debug",
    "format": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php --show-progress=dots --format=@auto -vv",
    "rector:check": "vendor/bin/rector process --dry-run",
    "rector:fix": "vendor/bin/rector process"
  }
}
